    <script>
        // Inicializar iconos
        lucide.createIcons();

        function switchTab(tabId) {
            // Ocultar todos los contenidos
            document.querySelectorAll('.tab-content').forEach(el => el.classList.remove('active'));
            document.getElementById('content-' + tabId).classList.add('active');

            // Actualizar botones del header
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('bg-blue-600', 'text-white', 'shadow-lg');
                btn.classList.add('text-slate-500');
            });
            const activeBtn = document.getElementById('btn-' + tabId);
            activeBtn.classList.add('bg-blue-600', 'text-white', 'shadow-lg');
            activeBtn.classList.remove('text-slate-500');

            // Actualizar iconos de progreso
            for(let i=1; i<=3; i++) {
                const icon = document.getElementById('step-icon-' + i);
                const label = icon.nextElementSibling;
                if(i <= tabId) {
                    icon.className = "w-14 h-14 rounded-full flex items-center justify-center transition-all shadow-xl bg-blue-600 text-white scale-110";
                    label.classList.add('text-blue-700');
                    label.classList.remove('text-slate-400');
                } else {
                    icon.className = "w-14 h-14 rounded-full flex items-center justify-center transition-all shadow-xl bg-white text-slate-400 border-2 border-slate-100";
                    label.classList.remove('text-blue-700');
                    label.classList.add('text-slate-400');
                }
            }
        }
    </script>
